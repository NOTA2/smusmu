extends assoLayout.pug
block append scripts
  script(src="/js/asso/member.js")
block append css
  link(rel="stylesheet" href="/css/asso/home.css")
  link(rel="stylesheet" href="/css/asso/member.css")
block append content
  .article
    table#rentstatus.nowtable.table.table-striped
      thead.thead-light
        tr
          th(scope="col").username 아이디
          th(scope="col").email 메일
          th(scope="col").grade 등급
          th(scope="col").pass 허가
          th(scope="col").del 삭제
      tbody
        - for(i=0;i<assouser.length;i++)
          tr.plusrow
            td.username= assouser[i].username
            td.email= assouser[i].email
            td.grade
              - if(assouser[i].grade == 1 || assouser[i].grade == 2)
                | 임원 계정
              - else if(assouser[i].grade == 3)
                | 부원 계정
            td.pass
              - if(assouser[i].token == 'true')
                | 허가 완료
              - else if(user.grade ==1 || user.grade == 2)
                button.btn.btn-success(onclick=`pass(${assouser[i].id});`) 허가
              - else
                | 권한없음
            td.del
              - if(assouser[i].token == 'true')
                | 삭제 불가
              - else if(user.grade ==1 || user.grade == 2)
                button.btn.btn-danger(onclick=`del(${assouser[i].id});`) 삭제
              - else
                | 권한없음




